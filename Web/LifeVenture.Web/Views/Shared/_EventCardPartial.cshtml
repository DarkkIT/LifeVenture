@using LifeVenture.Web.ViewModels.Events;
@model EventViewModel

@{
    var continuationOfTheString = "...";
    var percentageWidth = Model.ParticipationsPercentage > 10 ? Model.ParticipationsPercentage : 10;
}

<div class="card">
    <a class="card-anchor" asp-area="" asp-controller="Events" asp-action="Details" asp-route-id="@Model.Id">
        <img class="card-img-top" src="data:image/jpeg;base64,@Model.Image.ThumbnailAsBase64" alt="Card image cap">
        <div class="event-header card-body">
            <div class="card-title">@Model.Title</div>
        </div>
    </a>
    <ul class="card-list-group list-group list-group-flush">
        <li class="event-bar-header list-group-item">
            Участници: @Model.VolunteersCount от @Model.MaxParticipantsCount
        </li>
        <li class="list-group-item">
            <div class="progress">
                <div id="card-progress-bar" class="progress-bar" role="progressbar" style="width: @percentageWidth%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="0"> @Model.ParticipationsPercentage%</div>
            </div>
        </li>
        <li class="list-group-item card-text-body">
            @Model.ShortDescription
            @if (Model.Description.Length > 100)
            {
                @continuationOfTheString
                ;
            }
        </li>
    </ul>
    <div class="event-footer card-body">
        <div class="card-link card-footer-element">
            <div id="card-clock"></div>
            <div class="card-footer-text">Остават @Model.DaysLeft дни</div>
        </div>
        <div class="card-link card-footer-element">
            <div id="card-eye"></div>
            <div class="card-footer-text">Прегледи @Model.ViewsCount</div>
        </div>
    </div>
</div>
