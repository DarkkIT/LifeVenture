                    <div id="logo-part-one">Life</div>
                    <div id="logo-part-two">&infin;</div>
                    <div id="logo-part-three">venture</div>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="header-button nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-button nav-link text-dark" asp-controller="Events" asp-action="Index">Евенти</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-button nav-link text-dark" asp-controller="PeopleOfGoodness" asp-action="Index">Герои</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-button nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="header-button nav-link text-dark" asp-controller="AboutUs" asp-action="Index">За Нас</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="custom-inner-body">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

