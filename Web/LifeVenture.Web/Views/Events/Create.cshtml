@model LifeVenture.Web.ViewModels.Events.EventInputViewModel

@{
    this.ViewData["Title"] = "Дейности";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
    var phoneCodes = this.Model.Phone.Codes.Select(x => new SelectListItem(x.Value, x.Key));
}

<head>
    <link href="~/css/card.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/event.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/datepicker.css" rel="stylesheet" asp-append-version="true" />
</head>

<div class="text-center form-container">
    <form method="post" asp-controller="Events" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        @* Град *@
        @*  <select class="event-filter" id="locations">
        <option>Място</option>
        <option>Място</option>
        <option>Място</option>
        <option>Място</option>
        </select> *@

        <div @* class="row" *@>
            <div class="col">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="input-daterange">
                    <label asp-for="StartDate"></label>
                    <input type="text" id="start" class="form-control" placeholder="Ден-Месец-Година" min="2024-01-01" max="2100-12-31">
                    <span class="fa fa-calendar" id="fa-1"></span>
                </div>
            </div>
            <div class="col">
                <div class="input-daterange form-group">
                    <label asp-for="EndDate"></label>
                    <input type="text" id="end" class="form-control" placeholder="Ден-Месец-Година" min="2024-01-01" max="2100-12-31">
                    <span class="fa fa-calendar" id="fa-2"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Phone.CodeId"></label>
                <select asp-for="Phone.CodeId" class="form-control" asp-items="phoneCodes"></select>
                <span asp-validation-for="Phone.CodeId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Phone.Number"></label>
                <input type="text" asp-for="Phone.Number" class="form-control" />
                <span asp-validation-for="Phone.Number" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="exampleInputFile">Снимка</label>
                <input asp-for="Image" class="form-control-file" id="exampleInputFile" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

        </div>

        <div class="row">
            <div class="col">
                <label asp-for="IsUrgent"></label>
                <input asp-for="IsUrgent" class="form-control-file" />
                <span asp-validation-for="IsUrgent" class="text-danger"></span>
            </div>
        </div>

        <div class="p-3 mb-4">
            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Създай евент" asp-action="Create" />
            </div>
        </div>
    </form>
</div>


@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.js"></script>
    <script>
        var $j = jQuery.noConflict();
        $j(document).ready(function () {

            $j('.input-daterange').datepicker({
                format: 'dd-mm-yyyy',
                autoclose: true,
                calendarWeeks: true,
                clearBtn: true,
                disableTouchKeyboard: true
            });
        });
    </script>
}