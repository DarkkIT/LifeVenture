@model HomeViewModel;
@using LifeVenture.Common;
@using LifeVenture.Web.ViewModels.Events;
@using LifeVenture.Web.ViewModels.Home;
@{
    this.ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/card.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/home-carousel.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/sass/home-sass.css" rel="stylesheet" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>

<div id="home-body" class="text-center">

    <div id="home-welcome-container">
        <img id="home-welcome-img" src="~/images/backgrounds/hero-Image.jpg" alt="">
        <h1 id="home-welcome">ДОБРЕ ДОШЛИ В</h1>
        <h1 id="home-name">LIVE VENTURE</h1>
        <button id="home-event-button" type="button" class="btn btn-primary">Събития</button>
    </div>


    <div class="home-info-container">
        <div id="nums-container">
            <div class="item1">
                <div class="home-number">@Model.StatisticalInfo.ActiveEvents</div>
                <div class="home-label">Събития</div>
            </div>
            <div class="item2">
                <div class="home-number">@Model.StatisticalInfo.EndedEvents</div>
                <div class="home-label">Доброволци</div>
            </div>
            <div class="item3">
                <div class="home-number">@Model.StatisticalInfo.TotalGoodDeeds</div>
                <div class="home-label">Добри дела</div>
            </div>
            <div class="item4">
                <div class="home-number">@Model.StatisticalInfo.PeopleOfGoodness</div>
                <div class="home-label">Герои</div>
            </div>
            <div class="item5">
                <div class="home-number">@Model.StatisticalInfo.Volunteers</div>
                <div class="home-label">Потребители</div>
            </div>
        </div>
    </div>

    <div id="home-carousel-container">

        <div id="carousel">

            <div class="hideLeft inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="prevLeftSecond inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="prev inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="selected inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="next inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="nextRightSecond inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

            <div class="hideRight inner-div">
                <img src="~/images/test02.jpg">
                <div class="carusel-inner-header" style="opacity: 0;">
                    <div class="inner-header-text">Заглавие</div>
                </div>
            </div>

        </div>


        <button id="prev">
        </button>
        <button id="next">
        </button>


    </div>

</div>

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@
}
